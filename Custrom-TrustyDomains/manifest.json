{
    "version": "1.0",
    "manifest_version": 3,
    "name": "Trusted custom domains",
    "description": "Add custom domains to get a fast way to trust them without a certificate",
    "icons": {
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "icons/icon-gray128.png",
        "default_title": "Verificar confianza"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "options/options.html"

}